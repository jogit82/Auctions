<h1>Auctions</h1>
<%= form_tag(import_path, multipart: true) do %>
    <div class="form-group">
        <label for="browse">Importing a file</label>
        <p class="help-block">Please choose a CSV file from your computer</p>
        <%= file_field_tag :file, :class => "well" %>
        <%= submit_tag "Upload", :class => "btn btn-primary" %>
    </div>
<% end %>
<% flash.each do |key, value| %>
    <p class="alert bg-<%= key %>"><%= value %></p>
<% end %>
<h3>Imported Auctions</h3>
<table class="table table-bordered table-condensed table-striped">
    <thead>
        <tr>
            <th>Auction Name</th>
            <th>City</th>
            <th>Number of Vehicles Sold</th>
            <th>Total Profit</th>
            <th>Average Profit Per Vehicle</th>
        </tr>
    </thead>
    <tbody>
        <% @auctions.each do |auction| %>
            <tr>
                <td><%= auction.name %></td>
                <td><%= auction.city %></td>
                <td><%= auction.vehicles %></td>
                <td><%= auction.winning_bid - auction.seller_payout %></td>
                <td><%= (auction.winning_bid - auction.seller_payout)/auction.vehicles %></td>
            </tr>
        <% end %>
    </tbody>
</table>