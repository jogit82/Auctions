<h1>Auctions</h1>
<%= form_tag(import_path, multipart: true) do %>
    <div class="form-group">
        <p>Please choose a CSV file from your computer</p>
        <%= file_field_tag :file %>
        <%= submit_tag "Upload", :class => "btn btn-primary" %>
    </div>
<% end %>
<% flash.each do |key, value| %>
    <p class="alert bg-<%= key %>"><%= value %></p>
<% end %>
<h3>Imported Auctions</h3>
<table class="table table-bordered table-condensed table-striped">
    <thead>
        <tr>
            <th>Auction Name</th>
            <th>City</th>
            <th>Number of Vehicles Sold</th>
            <th>Total Profit</th>
            <th>Average Profit Per Vehicle</th>
        </tr>
    </thead>
    <tbody>
        <% @auctions.each do |auction| %>
            <tr>
                <td><%= auction.year %></td>
                <td><%= auction.make %></td>
                <td><%= auction.auction_name %></td>
                <td></td>
                <td></td>
            </tr>
        <% end %>
    </tbody>
</table>